<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="186dp"
        android:layout_height="240dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_girditem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoteCake"
        android:layout_width="152dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="200 gr chicken + cheese Lettuce + tomato"
        android:textColor="#070707"
        app:layout_constraintStart_toStartOf="@+id/tvNameCake"
        app:layout_constraintTop_toBottomOf="@+id/tvNameCake" />

    <TextView
        android:id="@+id/tvNameCake"
        android:layout_width="170dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Chicken burger"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/imgvCake" />

    <TextView
        android:id="@+id/tvPriceCake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="22.00"
        android:textColor="#FFC107"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgvCake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tvDanhGiaCake"
        app:layout_constraintTop_toBottomOf="@+id/tvDanhGiaCake"
        app:srcCompat="@drawable/bugger" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="7dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="$"
        android:textColor="#FFC107"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/tvNoteCake" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/tvPriceCake"
        app:layout_constraintTop_toBottomOf="@+id/tvNoteCake"
        app:srcCompat="@drawable/add" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="17dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/start" />

    <TextView
        android:id="@+id/tvDanhGiaCake"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:text="4.8"
        android:textColor="#040303"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>