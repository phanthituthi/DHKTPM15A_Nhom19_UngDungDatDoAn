<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="385dp"
        android:layout_height="181dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_girditem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoteCake"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="200 gr chicken + cheese Lettuce + tomato"
        android:textColor="#070707"
        app:layout_constraintStart_toStartOf="@+id/tvNameCake"
        app:layout_constraintTop_toBottomOf="@+id/tvNameCake" />

    <TextView
        android:id="@+id/tvNameCake"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:text="Chicken burger"
        android:textColor="#070707"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgvCake"
        app:layout_constraintTop_toTopOf="@+id/imgvCake" />

    <TextView
        android:id="@+id/tvPriceCake"
        android:layout_width="97dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:text="22.00"
        android:textColor="#FFC107"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgvCake"
        android:layout_width="119dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.396"
        app:srcCompat="@drawable/bugger" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="26dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="$"
        android:textColor="#FFC107"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgvCake"
        app:layout_constraintTop_toBottomOf="@+id/tvNoteCake" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="number"
        android:transitionName="1"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceCake"
        app:layout_constraintStart_toEndOf="@+id/tvPriceCake"
        app:layout_constraintTop_toTopOf="@+id/tvPriceCake"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonXoa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_girditem"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/remove"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>